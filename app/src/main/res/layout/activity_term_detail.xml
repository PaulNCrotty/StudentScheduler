<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/termDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/termDetailsEditMainHeader"
            style="@style/detailsViewBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term Details Editor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Extra padding for top on this first label because marginBottom for banner doesn't seem to be working -->
        <TextView
            android:id="@+id/generalDetailsHeader"
            style="@style/detailsViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Term Details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termDetailsEditMainHeader" />

        <TextView
            android:id="@+id/termNameLabel"
            style="@style/detailsViewTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term Name: "
            app:layout_constraintStart_toStartOf="@+id/generalDetailsHeader"
            app:layout_constraintTop_toBottomOf="@+id/generalDetailsHeader" />
        <EditText
            android:id="@+id/termNameEditText"
            style="@style/detailsViewEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Spring 2021"
            app:layout_constraintTop_toTopOf="@+id/termNameLabel"
            app:layout_constraintBottom_toBottomOf="@+id/termNameLabel"
            app:layout_constraintStart_toEndOf="@+id/termNameLabel" />

        <TextView
            android:id="@+id/assessmentDateLabel"
            style="@style/detailsViewTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            app:layout_constraintStart_toStartOf="@+id/generalDetailsHeader"
            app:layout_constraintTop_toBottomOf="@+id/termNameLabel" />
        <EditText
            android:id="@+id/assessmentDateEditText"
            style="@style/detailsViewEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:onClick="showDatePickerDialog"
            android:hint="2021-04-15"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@+id/assessmentDateLabel"
            app:layout_constraintBottom_toBottomOf="@+id/assessmentDateLabel"
            app:layout_constraintStart_toEndOf="@+id/assessmentDateLabel" />

        <TextView
            android:id="@+id/termEndDateLabel"
            style="@style/detailsViewTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            app:layout_constraintStart_toStartOf="@+id/generalDetailsHeader"
            app:layout_constraintTop_toBottomOf="@+id/assessmentDateLabel" />

        <EditText
            android:id="@+id/termEndDateEditText"
            style="@style/detailsViewEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:onClick="showDatePickerDialog"
            android:hint="2021-05-31"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/termEndDateLabel"
            app:layout_constraintStart_toEndOf="@+id/termEndDateLabel"
            app:layout_constraintTop_toTopOf="@+id/termEndDateLabel" />

        <TextView
            android:id="@+id/assessmentTypeHeader"
            style="@style/detailsViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress Status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termEndDateLabel" />

        <RadioGroup
            android:id="@+id/progressStatusSelectionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/assessmentTypeHeader">

            <RadioButton
                android:id="@+id/plannedStatusButton"
                style="@style/detailsViewSmallRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginStart="13dp"
                android:text="Planned" />

            <RadioButton
                android:id="@+id/approvedStatusButton"
                style="@style/detailsViewSmallRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Approved" />

            <RadioButton
                android:id="@+id/enrolledStatusButton"
                style="@style/detailsViewSmallRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Enrolled" />

            <RadioButton
                android:id="@+id/incompleteStatusButton"
                style="@style/detailsViewSmallRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Incomplete" />

            <RadioButton
                android:id="@+id/completedStatusButton"
                style="@style/detailsViewSmallRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Completed" />
        </RadioGroup>

        <!-- Courses Section -->
        <!-- TODO try to use RecycleView -->
        <TextView
            android:id="@+id/courseHeader"
            style="@style/detailsViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressStatusSelectionGroup" />
        <ImageButton
            android:id="@+id/addCourseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/courseHeader"
            app:layout_constraintBottom_toBottomOf="@+id/courseHeader"
            android:layout_marginEnd="35dp"
            android:src="@drawable/add_icon"
            android:background="#FFFFFF"
            android:onClick="addCourseToTerm" />
        <!-- Dynamically Filled with associated assessments -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/courseContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseHeader" />

        <!-- Primary Action Buttons (submit or cancel transaction) -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/courseContainer"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            android:text="Submit"/>
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/courseContainer"
            app:layout_constraintEnd_toStartOf="@+id/submitButton"
            android:layout_marginEnd="15dp"
            android:text="Cancel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>