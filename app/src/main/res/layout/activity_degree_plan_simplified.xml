<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/simplifiedDegreePlanContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/light_orange"
            app:layout_constraintBottom_toBottomOf="@+id/degreePlanDetailsMainHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/degreePlanDetailsMainHeader"
            style="@style/detailsViewBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Degree Plan for Charles Barkley"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/degreePlanDetailsSubtitle"
            style="@style/detailsViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Path to Victory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/degreePlanDetailsMainHeader" />

        <!-- Term Section -->
        <!-- TODO try to use RecycleView -->
        <TextView
            android:id="@+id/termHeader"
            style="@style/detailsViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/degreePlanDetailsSubtitle" />
        <ImageButton
            android:id="@+id/deleteAssessmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:onClick="deleteSelectedTerms"
            android:src="@drawable/subtract_icon"
            app:layout_constraintEnd_toStartOf="@+id/addAssessmentButton"
            app:layout_constraintBottom_toBottomOf="@+id/termHeader"
            app:layout_constraintTop_toTopOf="@+id/termHeader" />
        <ImageButton
            android:id="@+id/addAssessmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:background="#FFFFFF"
            android:onClick="addTermToPlan"
            android:src="@drawable/add_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/termHeader"
            app:layout_constraintTop_toTopOf="@+id/termHeader" />
        <!-- Dynamically Filled with associated terms -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/termContainer"
            style="@style/listViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termHeader">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Primary Action Buttons (submit or cancel transaction) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cancelButton"
            app:layout_constraintBottom_toBottomOf="@+id/cancelButton"
            android:background="@color/light_orange"/>
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/termContainer"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            android:text="Save"
            android:onClick="verifyAndSubmitCourse" />
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/termContainer"
            app:layout_constraintEnd_toStartOf="@+id/submitButton"
            android:layout_marginEnd="15dp"
            android:text="Cancel"
            android:onClick="cancel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>