<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="StudentSchedulerTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="termBackgroundBanner">@style/termBackgroundBanner</item>
        <item name="termTextFieldStyle">@style/termTextField</item>
        <item name="termEditButtonStyle">@style/termEditButton</item>
    </style>

    <style name="termBackgroundBanner">
        <item name="android:background">@color/purple_700</item>
        <!-- 0dp = "match constraint" option from Design view -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/text_view_term_list_layout_height</item>
        <item name="android:layout_margin">@dimen/text_view_term_list_layout_margin</item>
        <item name="android:padding">@dimen/text_view_term_list_padding</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="termTextField" parent="termBackgroundBanner">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="termEditButton" parent="termBackgroundBanner">
        <item name="android:background">@color/purple_700</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!-- Detail Views: Standards and Styles -->
    <style name="detailsViewBanner">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="detailsViewSubtitle">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/orange_dream</item>
    </style>
    <style name="detailsViewHeader">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/orange_dream</item>
    </style>
    <style name="detailsViewTextLabel">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="detailsViewEditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="detailsViewRadioButton">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="detailsViewSmallRadioButton">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- List Views: Standards and Styles  -->
    <style name="listViewContainer">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/orange_border</item>
    </style>
    <style name="listViewContainerBroad" parent="listViewContainer">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="listOptionBanner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@color/orange</item>
    </style>
    <style name="listOptionDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
    <style name="listOptionDates">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">35dp</item>
    </style>

    <style name="listOptionBannerAlt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <style name="listOptionDetailsAlt" parent="listOptionDetails">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="listOptionDatesAlt" parent="listOptionDates">
        <item name="android:textColor">@color/orange</item>
    </style>

</resources>