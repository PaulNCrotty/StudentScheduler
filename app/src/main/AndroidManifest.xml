<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wgu.android.studentscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/scheduler_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/scheduler_app_icon"
        android:supportsRtl="true"
        android:theme="@style/StudentSchedulerTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DegreePlanCreationActivity"/>
        <activity android:name=".activity.DegreePlanActivity"/>
        <activity android:name=".activity.DegreePlanListActivity"/>
        <activity android:name=".activity.TermDetailsActivity"/>
        <activity android:name=".activity.TermCreationActivity"/>
        <activity android:name=".activity.TermListActivity"/>
        <activity android:name=".activity.CourseDetailsActivity"/>
        <activity android:name=".activity.CourseNoteActivity"/>
        <activity android:name=".activity.AssessmentDetailsActivity"/>
        <receiver android:name=".alert.AlertBroadcaster" />
    </application>
</manifest>